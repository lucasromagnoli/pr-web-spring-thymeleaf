<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
	  <groupId>br.com.lucasromagnoli</groupId>
	  <artifactId>prwstj</artifactId>
	  <version>0.0.1.RC1-SNAPSHOT</version>
	</parent>
	<artifactId>prwstj-web</artifactId>
	<packaging>war</packaging>
  
  	<name>PRWSTJ - [Web]</name>
	<description>Projeto referência - Web, Jpa, Thymeleaf e Spring</description>
	<organization>
		<name>Lucas Ramos Romagnoli</name>
		<url>https://www.github.com/lucasromagnoli</url>
	</organization>
	
	<properties>
		<!-- Versão do Plugin Maven War Compiler -->
		<maven-war-plugin.version>3.2.3</maven-war-plugin.version>
		<!-- Versão do Thymeleaf -->
		<thymeleaf.version>3.0.11.RELEASE</thymeleaf.version>
		<thymeleaf.spring5.version>3.0.11.RELEASE</thymeleaf.spring5.version>
		<thymeleaf.layout.dialect.version>2.4.1</thymeleaf.layout.dialect.version>
		
		<!-- Versão do Logging SLF4J-->
		<log4j.version>2.16.0</log4j.version>
		
		<!-- Versão da ponte com o Loggin SLF4J -->
		<jcl-over-slf4j.version>1.7.28</jcl-over-slf4j.version>
	</properties>
		
	<dependencies>		
		<!-- PRWSTJ [Security] -->
		<dependency>
			<groupId>br.com.lucasromagnoli</groupId>
			<artifactId>prwstj-security</artifactId>
			<version>${br.com.lucasromagnoli.prwstj.version}</version>
		</dependency>
				
		<!-- Thymeleaf -->
		<dependency>
		  <groupId>org.thymeleaf</groupId>
		  <artifactId>thymeleaf</artifactId>
		  <version>${thymeleaf.version}</version>
		  <scope>compile</scope>
		</dependency>
		
		<!-- Thymeleaf Spring5 -->
		<dependency>
		  <groupId>org.thymeleaf</groupId>
		  <artifactId>thymeleaf-spring5</artifactId>
		  <version>${thymeleaf.spring5.version}</version>
		  <scope>compile</scope>
		</dependency>

		<!-- Thymeleaf Layout Dialect -->
		<dependency>
		  <groupId>nz.net.ultraq.thymeleaf</groupId>
		  <artifactId>thymeleaf-layout-dialect</artifactId>
		  <version>${thymeleaf.layout.dialect.version}</version>
		  <scope>compile</scope>
		</dependency>
		
		<!-- Logging -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>${log4j.version}</version>
			<scope>compile</scope>
		</dependency>
		
		<!-- Logging -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>${log4j.version}</version>
			<scope>compile</scope>
		</dependency>

		<!-- Logging -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<version>${log4j.version}</version>
			<scope>compile</scope>
		</dependency>

		<!-- Logging -->
		<dependency>
		    <groupId>org.slf4j</groupId>
		    <artifactId>jcl-over-slf4j</artifactId>
		    <version>${jcl-over-slf4j.version}</version>
		    <scope>compile</scope>
		</dependency>

	</dependencies>
	
	<profiles>
		<profile>
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				
			</properties>
		</profile>
		
		<profile>
			<id>desenv</id>
			<properties>
				
			</properties>
		</profile>
		
		<profile>
			<id>homolog</id>
			<properties>
				
			</properties>
		</profile>
		
		<profile>
			<id>prod</id>
			<properties>
				
			</properties>
		</profile>
	</profiles>
	
	<build>
		<filters>
		</filters>
	
	<resources>
		<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.properties</include>
				</includes>
		</resource>
		<resource>
			<directory>src/main/resources</directory>
			<includes>
				<include>**/**</include>
			</includes>
		</resource>
	</resources>
	
	<plugins>	
		<!-- Plugin Maven War Compiler -->
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-war-plugin</artifactId>
			<version>${maven-war-plugin.version}</version>
			<configuration>
				<webResources>
					<resource>
						<filtering>true</filtering>
						<directory>src/main/resources</directory>
						<includes>
							<include>**/setting.html</include>
						</includes>
						</resource>
					</webResources>
				</configuration>
		</plugin>
			
		<!-- Plugin Maven Compiler -->
		<plugin>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>${maven.compiler.plugin.version}</version>
			<configuration>
				<source>${maven.compiler.source}</source>
				<target>${maven.compiler.target}</target>
			</configuration>
		</plugin>
	</plugins>
	
	</build>
</project>